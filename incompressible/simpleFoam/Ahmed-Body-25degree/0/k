FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 2 -2 0 0 0 0 ];

internalField   uniform 0.24;

boundaryField
{
    inlet
    {
        type            turbulentIntensityKineticEnergyInlet;
        intensity       0.02;
        value           uniform 0.24;
    }

    outlet
    {
        type            zeroGradient;
    }

    symmetry
    {
        type           symmetryPlane;
    }
    
    slipWalls
    {
        type            slip;
    }

    wallAhmed
    {
        type            kqRWallFunction;
        value           uniform 0;
    }
    
     wallGround
    {
        type            kqRWallFunction;
        value           uniform 0;
    }
}


