FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "../system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
    grad(p)         Gauss linear;
    grad(U)         Gauss linear;;
}

divSchemes
{
    default         none;
    div(phi,U)      Gauss upwind; //vanLeer;
    div(phi,k)      Gauss upwind; //vanLeer;
    div(phi,omega) Gauss upwind; //vanLeer;
    div((nuEff*dev(T(grad(U))))) Gauss linear; //vanLeer;
}

interpolationSchemes
{
    default         linear;
    interpolate(U)  linear;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

snGradSchemes
{
    default         corrected;
}

fluxRequired
{
    default         no;
    p;
}


// ************************************************************************* //
