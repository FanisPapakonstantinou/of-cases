FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/solid";
    object      cellToRegion;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    walls
    {
        type            zeroGradient;
    }
    solid_to_fluidA
    {
        type            calculated;
        value           uniform 0;
    }
    solid_to_fluidB
    {
        type            calculated;
        value           uniform 0;
    }
}


